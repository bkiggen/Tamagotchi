
<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Your Friends!</title>
  </head>
  <body>
    @using Tamagotchi.Models;

    <h1>Your Friends:</h1>
    <ul>

    @if (Model.Count == 0)
    {
      <p>You have no friends! So Sad!</p>
    }
    @if(Model.Count != 0)
    {
      @foreach (Friend friend in Model)
      {
            <h3>@friend.GetName()</h3>
        <form method="post" action="/friends/@friend.GetId()/hunger">
            <div style="display: flex; width: 200px; justify-content: space-between;"><h4>Hunger: @friend.GetHunger()</h4><button type="submit">Increase</button></div>
        </form>
        <br/>
        <form method="post" action="/friends/@friend.GetId()/rest">
            <div style="display: flex; width: 200px; justify-content: space-between;"><h4>Rest: @friend.GetRest()</h4><button type="submit">Increase</button></div>
        </form>
        <br/>
        <form method="post" action="/friends/@friend.GetId()/attention">
            <div style="display: flex; width: 200px; justify-content: space-between;"><h4>Attention: @friend.GetAttention()</h4><button type="submit">Increase</button></div>
        </form>
        <br/>
      }
    }
    <a href="/">Add more?</a>

    </ul>
  </body>
</html>